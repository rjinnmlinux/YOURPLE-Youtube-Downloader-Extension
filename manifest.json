{
  "manifest_version": 3,
  "name": "YOURPLE",
  "version": "1.0.0",
  "description": "YOURPLE: The modern purple YouTube downloader.",
  "homepage_url": "https://yourple.download",
  "icons": {
    "128": "logo/yourple-icon128.png"
  },
  "permissions": [
    "downloads",
    "downloads.open",
    "scripting",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtu.be/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtu.be/*"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "128": "logo/icon128.png"
    }
  }
}
